
<h1>Eventos</h1>

<div class="table-responsive">

  <table class="table table-bordered table-hover">
    <thead table-light vertical-align: middle>
      <tr>
        <th scope="col">Nombre</th>
        <th scope="col">Fecha Inicial</th>
        <th scope="col">Fecha Final</th>
        <th scope="col">Hora Inicio</th>
        <th scope="col">Hora Fin</th>
        
      </tr>
    </thead>

    <tbody vertical-align: middle>
      <% @eventos.each do |evento| %>
       <% if evento.user_id == current_user.id %>
          <tr>
            <th scope="row"><%= link_to evento.name, evento %></th>
            <td><%= evento.start_time.strftime("%d-%m-%Y") %></td>
            <td><%= evento.end_time.strftime("%d-%m-%Y") %></td>
            <td><%= evento.start_time.strftime("%H:%M") %></td>
            <td><%= evento.end_time.strftime("%H:%M") %></td>
            
            
            
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

<br>

<%= link_to 'Nuevo Evento', new_evento_path, class:"btn btn-outline-primary"%>
</div>