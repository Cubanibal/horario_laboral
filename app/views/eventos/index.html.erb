
<h1>Eventos</h1>



<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Start time</th>
      <th>End time</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @eventos.each do |evento| %>
     <% if evento.user_id == current_user.id %>
        <tr>
          <td><%= evento.name %></td>
          <td><%= evento.start_time %></td>
          <td><%= evento.end_time %></td>
          <td><%= evento.user_id %></td>
          <td><%= link_to 'Show', evento %></td>
          <td><%= link_to 'Edit', edit_evento_path(evento) %></td>
          <td><%= link_to 'Destroy', evento, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Evento', new_evento_path %>
