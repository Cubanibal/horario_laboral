

<div class="card">
  <div class="card-header">
    <h5 class="card-title">
      
      <%= @evento.name %>
    </h5>
  </div>
  <br/>
  <div class="card-body">
    <p class="card-text">
      <strong>Fecha inicial:</strong>
      <%= @evento.start_time.strftime("%d-%m-%Y") %> |
      <strong>Hora inicio:</strong>
      <%= @evento.start_time.strftime("%H:%M") %>
    </p>

    <p class="card-text">
      <strong>Fecha final:</strong>
      <%= @evento.end_time.strftime("%d-%m-%Y") %> |
      <strong>Hora final:</strong>
      <%= @evento.end_time.strftime("%H:%M") %>
    </p>
  </div>
  <br/>
  <div class="card-footer">

    <%= link_to 'Editar', edit_evento_path(@evento) %> |
    <%= link_to 'Atras', eventos_path %> |
    <%= link_to 'Eliminar', @evento, method: :delete, data: { confirm: 'EstÃ¡s seguro?' } %>
  </div>
</div>